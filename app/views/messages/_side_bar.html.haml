.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-groups
        = link_to new_group_path, class:"fa fa-edit" do
          =icon('fab','fa-edit')
        %li.side-header__box__menu__edit-user
        = link_to edit_user_path(current_user), class:"fa fa-cog" do
          =icon('fab','fa-cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          %p.groups__group__group-name
            = group.name
          %p.groups__group__latest-message
            まだメッセージがありません
